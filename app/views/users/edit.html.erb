<h1>User info</h1>
<%= form_with model: @user, local: true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"Name"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "ProfileImage", accept: "image/*" %>
  <label for="inputIntroduction"></label>
  <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputIntroduction", placeholder:"Introduction"%>

  <%= f.submit "Update User" %>
<% end %>
