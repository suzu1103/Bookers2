<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>User info</h1>
    <%= form_with model: @user, local: true do |f| %>
      <div class = "form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"Name"%>
      </div>
      <div class = "form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "ProfileImage", accept: "image/*" %>
      </div>
      <div class = "form-group">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputIntroduction" %>
      </div>
      <div class = "form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
    <% end %>

  </div>
</div>


